<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro"/>
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    
    <!-- BASE LINK-->
    <link name="base_link">

    </link>

    <!--CHASSIS LINK-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.11 0 0.04"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.11 0 0.075"/>
            <geometry>
                <cylinder radius="0.11" length="0.15"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0.11 0 0.075"/>
            <geometry>
                <cylinder radius="0.11" length="0.15"/>
            </geometry>
            
        </collision>
        <xacro:inertial_cylinder mass="0.5" radius="0.11" length="0.15">
            <origin xyz="0.11 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_cylinder>     
    </link>

    <!--LEFT WHEEL LINK-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link = "chassis"/>
        <child link = "left_wheel"/>
        <origin xyz="0.11 0.13 0" rpy="-1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
            
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.04" length="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>  
    </link>

    <!--RIGHT WHEEL LINK-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link = "chassis"/>
        <child link = "right_wheel"/>
        <origin xyz="0.11 -0.13 0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
            
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.04" length="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>  
    </link>

    <!--CASTER WHEEL LINK1-->
    <joint name="caster_wheel_joint1" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel1"/>
        <origin xyz="0.2 0 -0.02"/>
    </joint>

    <link name="caster_wheel1">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            
        </collision>
        <xacro:inertial_sphere mass="0.05" radius="0.02" >
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>  
    </link>

    <!--CASTER WHEEL LINK2-->
    <joint name="caster_wheel_joint2" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel2"/>
        <origin xyz="0.02 0 -0.02"/>
    </joint>

    <link name="caster_wheel2">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            
        </collision>
        <xacro:inertial_sphere mass="0.05" radius="0.02" >
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
</robot>